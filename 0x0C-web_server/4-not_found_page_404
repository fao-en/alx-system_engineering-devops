#!/usr/bin/env bash

# Check if the script is run with root privileges
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run the script as root or using sudo."
    exit 1
fi

# Update package list and install nginx
apt-get -y update
apt-get -y install nginx

# Allow Nginx through the firewall (ufw)
ufw allow 'Nginx HTTP'

# Create a simple HTML page with the custom 404 message
echo 'Ceci n'"'"'est pas une page' > /var/www/html/404.html

# Add custom 404 configuration to the Nginx default site configuration
sed -i '/listen 80 default_server;/a error_page 404 /404.html;\nlocation = /404.html {\n    root /var/www/html;\n    internal;\n}' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart

# Display a message indicating successful configuration
echo "Nginx custom 404 page configured successfully."

